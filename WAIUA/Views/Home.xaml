<UserControl
	x:Class="WAIUA.Views.Home"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:c="clr-namespace:WAIUA.Controls"
	xmlns:viewmodels="clr-namespace:WAIUA.ViewModels"
	xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:p="clr-namespace:WAIUA.Properties"
	d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
	d:DesignHeight="754"
	d:DesignWidth="1536"
	Background="#2E3349"
	mc:Ignorable="d">
	<i:Interaction.Triggers>
		<i:EventTrigger EventName="Loaded">
			<i:InvokeCommandAction Command="{Binding PassiveLoadCommand}" />
		</i:EventTrigger>
	</i:Interaction.Triggers>
	<UserControl.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
	</UserControl.Resources>
	<UserControl.Triggers>
		<EventTrigger RoutedEvent="Loaded">
			<BeginStoryboard>
				<Storyboard>
					<DoubleAnimation
						Storyboard.TargetProperty="Opacity"
						From="0.0" To="1.0" Duration="0:0:1" />
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</UserControl.Triggers>

	<Grid Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition Height="60" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Grid Grid.Row="0" Grid.ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Button
				Grid.Column="0" Cursor="Hand" Width="60"
				HorizontalAlignment="Left" VerticalAlignment="Center"
				Command="{Binding DataContext.NavigateSettingsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
				Template="{StaticResource ButtonTemplate}">

				<Image Margin="10" Source="/Assets/settings.png" />
			</Button>
			<Button
				Grid.Column="0" x:Name="GoMatch"
				Command="{Binding DataContext.NavigateNormalmatchCommand, RelativeSource={RelativeSource AncestorType=Window}}"
				Visibility="Collapsed" />

			<Button
				Grid.Row="0" Grid.Column="4" Cursor="Hand" Width="60"
				HorizontalAlignment="Right"
				Command="{Binding DataContext.NavigateInfoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
				Template="{StaticResource ButtonTemplate}">
				<Image Margin="10" Source="/Assets/info.png" />
			</Button>
			<TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" FontSize="35" VerticalAlignment="Center"
			           FontWeight="SemiBold" FontFamily="{StaticResource Nunito}"
			           Foreground="White" Text="{x:Static p:Resources.YourParty}" />

			<TextBlock FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Right"
			           FontWeight="SemiBold" Grid.Row="0" Grid.Column="3" FontFamily="{StaticResource Nunito}"
			           Foreground="White" Text="{x:Static p:Resources.Status}" />
		</Grid>
		<TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center"
		           FontFamily="{StaticResource Nunito}"
		           Foreground="White" Text="Under Construction" />
		
			<ItemsControl Grid.Row="1" Grid.Column="0" Margin="0,15,0,0"
			              ItemsSource="{Binding PlayerList}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<UniformGrid Columns="1" Margin="5"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<c:PlayerControl MaxHeight="150"
						                        Margin="0 5"
						                        PlayerCell="{Binding}" />
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>


		<Grid Grid.Row="1" Grid.Column="1">

			<Grid Grid.Row="0"
			      Margin="5 15 0 0">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"
				            Orientation="Horizontal">
					<Border Background="#252A40" Margin="20" Width="Auto"
					        CornerRadius="20">
						<Border.Effect>
							<DropShadowEffect BlurRadius="5" ShadowDepth="3" />
						</Border.Effect>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<TextBlock Margin="25"
							           FontSize="20"
							           HorizontalAlignment="Center"
							           FontFamily="{StaticResource Nunito}"
							           VerticalAlignment="Center"
							           FontWeight="Normal"
							           Foreground="White"
							           Text="{x:Static p:Resources.Valorant}" />
							<Image Margin="25" Width="30" Grid.Row="0" Grid.Column="1" Source="{Binding GameStatus}" />


							<TextBlock Margin="25" Grid.Row="1" Grid.Column="0"
							           FontSize="20"
							           HorizontalAlignment="Center"
							           VerticalAlignment="Center"
							           FontFamily="{StaticResource Nunito}"
							           FontWeight="Normal"
							           Foreground="White"
							           Text="{x:Static p:Resources.Account}" />
							<Image Margin="25" Width="30" Grid.Row="1" Grid.Column="1" Source="{Binding AccountStatus}" />

							<TextBlock Margin="25" Grid.Row="2" Grid.Column="0"
							           FontSize="20"
							           HorizontalAlignment="Center"
							           VerticalAlignment="Center"
							           FontFamily="{StaticResource Nunito}"
							           FontWeight="Normal"
							           Foreground="White"
							           Text="{x:Static p:Resources.Match}" />
							<Image Margin="25" Width="30" Grid.Row="2" Grid.Column="1" Source="{Binding MatchStatus}" />
						</Grid>
					</Border>

					<Border Background="#252A40" Margin="20" Width="Auto" Height="Auto" VerticalAlignment="Center"
					        CornerRadius="20">
						<Border.Effect>
							<DropShadowEffect BlurRadius="5" ShadowDepth="3" />
						</Border.Effect>
						<Grid>
							<Grid.RowDefinitions>
								<!-- <RowDefinition Height="Auto" /> -->
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<!-- <TextBlock Margin="25" -->
							<!--            FontSize="20" -->
							<!--            HorizontalAlignment="Center" -->
							<!--            VerticalAlignment="Center" -->
							<!--            FontFamily="{StaticResource Nunito}" -->
							<!--            FontWeight="Normal" -->
							<!--            Foreground="White" -->
							<!--            Text="{x:Static p:Resources.QueueTime}" /> -->
							<TextBlock Margin="25"
							           FontSize="20" Grid.Row="0" Grid.Column="1"
							           HorizontalAlignment="Center"
							           FontFamily="{StaticResource Nunito}"
							           VerticalAlignment="Center"
							           FontWeight="Normal"
							           Foreground="#007EF9"
							           Text="{Binding QueueTime}" />

							<TextBlock Margin="25" Grid.Row="1" Grid.Column="0"
							           FontSize="20"
							           HorizontalAlignment="Center"
							           VerticalAlignment="Center"
							           FontWeight="Normal"
							           Foreground="White"
							           FontFamily="{StaticResource Nunito}"
							           Text="{x:Static p:Resources.RefreshingIn}" />
							<TextBlock Margin="25" Grid.Row="1"
							           FontSize="20" Grid.Column="1"
							           HorizontalAlignment="Center"
							           FontFamily="{StaticResource Nunito}"
							           VerticalAlignment="Center"
							           FontWeight="Normal"
							           Foreground="#007EF9"
							           Text="{Binding RefreshTime}" />


						</Grid>
					</Border>
				</StackPanel>

				<Button Grid.Row="1" Cursor="Hand" Height="90"
				        HorizontalAlignment="Center"

				        Command="{Binding LoadNowCommand}"
				        Template="{StaticResource ButtonTemplate}">
					<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
						<TextBlock
							Padding="5"
							VerticalAlignment="Center"
							FontWeight="Normal"
							Foreground="#007EF9"
							FontSize="24"
							FontFamily="{StaticResource Nunito}"
							Text="{x:Static p:Resources.Refresh}" />
						<Image Margin="15" Source="/Assets/refresh.png" />
					</StackPanel>
				</Button>

			</Grid>
			

		</Grid>
		<c:OverlayControl Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0"
		                  Overlay="{Binding Path=Overlay}"
		                  Visibility="{Binding Overlay.IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />

	</Grid>

</UserControl>