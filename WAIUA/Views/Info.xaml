<UserControl
    x:Class="WAIUA.Views.Info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="754"
    d:DesignWidth="1536"
    Background="#2E3349"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.ColumnSpan="3" Background="#181E34">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="70" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding NavigateAccountCommand}">

                <Image Margin="15" Source="/Assets/sign-in.png" />

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Opacity="0" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Cursor" Value="Hand" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#234d96" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="70"
                            Height="70"
                            Background="{TemplateBinding Background}"
                            CornerRadius="0,20,20,0">

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding NavigateHomeCommand}">

                <TextBlock
                    Grid.Column="1"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Fonts/#RopaSans"
                    FontSize="30"
                    FontWeight="Medium"
                    Foreground="#007EF9"
                    Text="Click To Load Match Info" />

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="#181E34" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Cursor" Value="Hand" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#234d96" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="400"
                            Height="70"
                            Background="{TemplateBinding Background}"
                            CornerRadius="0,0,20,20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding NavigateInfoCommand}">

                <Image Margin="15" Source="/Assets/info.png" />

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Opacity="0" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Cursor" Value="Hand" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#234d96" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="70"
                            Height="70"
                            Background="{TemplateBinding Background}"
                            CornerRadius="20,0,0,20">

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <Image
                    Width="40"
                    HorizontalAlignment="Left"
                    Source="/Assets/arrow.png" />
                <TextBlock
                    FontSize="30"
                    Foreground="White"
                    Text="Account" />
                <TextBlock
                    FontSize="20"
                    Foreground="White"
                    Opacity="0.7"
                    Text="ONLY log into your Riot account if there are issues with the app or if Valorant is not running"
                    TextWrapping="Wrap" />
            </StackPanel>
            <Viewbox Grid.Column="0" VerticalAlignment="Bottom">
                <StackPanel>
                    <Image
                        Height="100"
                        HorizontalAlignment="Center"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Assets/discord.png" />
                    <TextBlock
                        FontSize="30"
                        Foreground="White"
                        TextAlignment="Center">
                        <Hyperlink NavigateUri="https://discord.gg/X7CYCeZSRK" RequestNavigate="HandleLinkClick">Join my Discord</Hyperlink>
                    </TextBlock>
                    <TextBlock
                        FontSize="20"
                        Foreground="White"
                        Opacity="0.7"
                        Text="For support, etc."
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Viewbox>
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Grid.ColumnSpan="2">
                <Image
                    Width="40"
                    HorizontalAlignment="Center"
                    Source="/Assets/arrow.png" />
                <TextBlock
                    FontSize="30"
                    Foreground="White"
                    Text="Load Match"
                    TextAlignment="Center" />
                <TextBlock
                    FontSize="20"
                    Foreground="White"
                    Opacity="0.7"
                    Text="Loads live match data if available. Should take less than 10 seconds to load"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </StackPanel>
            <Viewbox
                Grid.Column="1"
                Grid.ColumnSpan="2"
                VerticalAlignment="Bottom">
                <StackPanel VerticalAlignment="Bottom">
                    <Button
                        Margin="30,0,30,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Click="Button_Click">

                        <Viewbox>
                            <TextBlock
                                Padding="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontWeight="Normal"
                                Foreground="#007EF9"
                                Text="Check for Updates" />
                        </Viewbox>

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#181E34" />
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor" Value="Hand" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#234d96" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="10,10,10,10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            FontSize="20"
                            Foreground="White"
                            Opacity="0.7"
                            Text="Latest Version: "
                            TextAlignment="Left"
                            TextWrapping="Wrap" />
                        <TextBlock
                            x:Name="LatestVersion"
                            FontSize="20"
                            Foreground="White"
                            Opacity="0.7"
                            Text=""
                            TextAlignment="Left"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            FontSize="20"
                            Foreground="White"
                            Opacity="0.7"
                            Text="Current Version: "
                            TextAlignment="Left"
                            TextWrapping="Wrap" />
                        <TextBlock
                            x:Name="CurrentVersion"
                            FontSize="20"
                            Foreground="White"
                            Opacity="0.7"
                            Text=""
                            TextAlignment="Left"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </StackPanel>
            </Viewbox>
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="2"
            Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1">
                <Image
                    Width="40"
                    HorizontalAlignment="Right"
                    Source="/Assets/arrow.png" />
                <TextBlock
                    FontSize="30"
                    Foreground="White"
                    Text="Info"
                    TextAlignment="Right" />
                <TextBlock
                    FontSize="20"
                    Foreground="White"
                    Opacity="0.7"
                    Text="You're on this page idot"
                    TextAlignment="Right"
                    TextWrapping="Wrap" />
            </StackPanel>
            <Viewbox Grid.Column="1" VerticalAlignment="Bottom">
                <StackPanel>
                    <Image
                        Height="100"
                        HorizontalAlignment="Center"
                        Source="/Assets/Soneliem.png" />
                    <TextBlock
                        FontSize="30"
                        Foreground="White"
                        TextAlignment="Center">
                        <Hyperlink NavigateUri="https://github.com/Soneliem" RequestNavigate="HandleLinkClick">Made By Soneliem</Hyperlink>
                    </TextBlock>
                    <TextBlock
                        FontSize="20"
                        Foreground="White"
                        Opacity="0.7"
                        Text="With love and hate"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Viewbox>
        </Grid>
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Image
                Height="120"
                HorizontalAlignment="Center"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="/Assets/logo.png" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="45"
                FontWeight="SemiBold"
                Foreground="White">
                WAIUA
            </TextBlock>
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="DemiBold"
                Foreground="#32e2b2">
                Who Am I Up Against?
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>