<UserControl x:Class="WAIUA.Controls.InventoryEntryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WAIUA.Controls"
             x:Name="Self"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Border Grid.Column="0" Grid.Row="0" Background="#181E34" CornerRadius="20"  Margin="10" Padding="10">
		<Border.Effect>
			<DropShadowEffect BlurRadius="5" ShadowDepth="3" />
		</Border.Effect>
		<Image Source="{Binding Image, ElementName=Self}"
		       ToolTip="{Binding TooltipName, ElementName=Self}"
		       ToolTipService.InitialShowDelay="0">
			<Image.Effect>
				<DropShadowEffect BlurRadius="5" ShadowDepth="3" />
			</Image.Effect>
		</Image>
	</Border>
</UserControl>
